@model Practica2.Models.CreditoDebitoModels
@{
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Credito</title>
</head>
<body>
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
            @using (Html.BeginForm("Acreditar", "CreditoDebito", FormMethod.Post, new { id = "Form Name" }))
            {
                    <div class="form-group">
                        @Html.LabelFor(m => m.cuenta, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.cuenta, new { @class = "form-control" })
                        </div>
                        @Html.LabelFor(m => m.monto, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.monto, new { @class = "form-control" })
                        </div>
                        @Html.LabelFor(m => m.descripcion, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.descripcion, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Acreditar" class="btn btn-default" />
                        </div>
                    </div>
                    
                }
            </section>
        </div>
        <div class="col-md-8">
            @ViewBag.MsgSaldo
        </div>
    </div>

   
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}