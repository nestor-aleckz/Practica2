@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section MenuIzq{
    <li>@Html.ActionLink("Registro", "User", "Home")</li>
    <li>@Html.ActionLink("Login", "Login", "Home")</li>
}

<h2> Registro de Usuario</h2>
<div class="row">
    <div class="col-sm-6 col-md-6">
        <table style="width:100%">
            <tr>
                <td><label class="col-md-2 control-label">Nombre</label></td>
                <td><input type="text" id="txtNombre" class="form-control"></td>
            </tr>
            <tr>
                <td><label class="col-md-2 control-label">Apellido</label> </td>
                <td><input type="text" id="txtApellido" class="form-control"></td>
            </tr>
            <tr>
                <td><label class="col-md-2 control-label">Correo</label> </td>
                <td><input type="text" id="txtCorreo" class="form-control"></td>
            </tr>
            <tr>
                <td><label class="col-md-2 control-label">Usuario</label> </td>
                <td><input type="text" id="txtUser" class="form-control"></td>
            </tr>
            <tr>
                <td><label class="col-md-2 control-label" >Password</label> </td>
                <td><input type="password" id="txtPass" class="form-control"></td>
            </tr>

        </table>
    </div>

</div>

<div class="row">
    <div class="col-sm-3 col-md-3">
        <center>
            <input type="button" id="btnAceptar" class="btn btn-default" value="Registrar">
        </center>
    </div>
</div>

<div  class="row"  >
    <div id="correcto" class="col-sm-3 col-md-3" style="background-color:aliceblue">
    </div>
</div>
<div  class="row"  >
    <div id="error" style="background-color: darkorange"  class="col-sm-3 col-md-3">
    </div>
</div>

<script type="text/javascript" src="../Scripts/jquery-1.10.2.min.js"></script>

<script type="text/javascript">
    jQuery(document).ready(function () {
        $('#error').hide();
        $('#correcto').hide();
        $('#btnAceptar').click(function () {
            var nombre = $('#txtNombre').val();
            var apellido = $('#txtApellido').val();
            var correo = $('#txtCorreo').val();
            var user = $('#txtUser').val();
            var pass = $('#txtPass').val();

            if (nombre && (nombre != ''))
                enviarDatos(nombre, apellido, correo, user, pass);
        });
    });

    function enviarDatos(nombre, apellido, correo, user, pass) {
        $.ajax({
            type: "POST",
            url: "/Home/RegistrarUsuario",
            data: '{nombre: "' + nombre + '", apellido : "' + apellido + '", correo : "' + correo + '", user : "' + user + '", pass : "' + pass + '" }',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (msg) {
                if (msg.resultado == "1") {
                    $('#correcto').html("<p>"+msg.msj+"</p>");
                    $('#correcto').show();
                } else {
                    $('#error').html("<p>"+msg.msj+"</p>");
                    $('#error').show();
                    $('#correcto').hide();
                }
            },
            error: function (result) {
                alert("ERROR " + result.status + ' ' + result.statusText);
            }
        });

    };
</script>
